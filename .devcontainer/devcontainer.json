{
  "name": "Twitch VOD Transcribe (CUDA)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  
  "runArgs": [
    "--gpus=all",
    "--ipc=host",
    "--memory-swap=-1",
    "--cap-add=SYS_ADMIN",
    "--cap-add=DAC_READ_SEARCH"
  ],
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "foxundermoon.shell-format",
        "jetmartin.bats"
      ]
    }
  },
  
  "postCreateCommand": "chmod +x /workspaces/twitch-vod-transcribe/.devcontainer/post-setup.sh && /workspaces/twitch-vod-transcribe/.devcontainer/post-setup.sh",
  
  "remoteUser": "root",
  
  "mounts": [
    "source=${localEnv:HOME}/.cache/huggingface,target=/root/.cache/huggingface,type=bind,consistency=cached"
  ],
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode"
    }
  }
}
